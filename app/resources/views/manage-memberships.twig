{% extends 'admin_layout.twig' %}
{% block content %}

{% if page.active_plan %}
<div class="row clearfix">
<div class="col-lg-12 col-md-12">
					<div class="listing-item-container list-layout" style="background-color:#ffffff;">
						<div class="listing-item">
							<!-- Content -->
							<div class="listing-item-content">
								<div class="listing-item-inner">
								<h3 style="margin-top:30px;">ACTIVE PLAN: {{page.active_plan.title}}</h3>
									<hr>
								<div class="inner-booking-list">
											<h5>Validity :</h5>
											<ul class="booking-list">
												<li><h5>Upto {{page.active_plan.date_expiring_display}}</h5></li>
												<li><h5>{{page.active_plan.days_to_expire}} days left</h5></li>
											</ul>
										</div>
										
								<div class="inner-booking-list">
											<h5>Activated on </h5>
											<ul class="booking-list">
												<li><h5>{{page.active_plan.date_created_display}} </h5></li>
												<li><h5>Status : {{page.active_plan.status}}</h5></li>
											</ul>
										</div>		
										
									<a href="{{ base_url() }}/invoice/{{page.active_plan.qcode}}" class="button margin-bottom-20" style="padding: 8px 20px;
font-size: 15px;margin-top:20px;"> <i class="fa fa-arrow-right"></i> View Invoice</a>
								</div>

							</div>
						</div>
					</div>
				</div>
				
		<div class="col-lg-12 col-md-12 text-right"><a href="{{ base_url() }}/subscription-plans" class="margin-bottom-20" style="padding: 8px 20px;
font-size: 15px;margin-top:20px;"> <i class="fa fa-arrow-right"></i> View All Subscription Plans</a></div>
				</div>
  {% else %}
            <div style="text-align: center;padding: 20px 0;">
				<h1><i class="sl sl sl-icon-badge"></i></h1>
				<h3 class="margin-top-10">Choose a suitable plan to get started.</h3>
				<p style="padding-bottom: 10px;">Looks like you have not subscribed for any plan yet.</p>
				<a href="{{ base_url() }}/membership" class="button margin-bottom-20" style="padding: 11px 25px;
font-size: 18px;"> <i class="fa fa-arrow-right"></i> View Plans</a>
			</div>
            {% endif %}			




{% if page.membership_plans|length > 0 %}
<div class="row clearfix">
   								
    	<div class="col-lg-12 col-md-12">
    	     <h4 style="margin-top:30px;">OTHER SUBSCRIPTIONS</h4>
	<hr>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Plan</th>
                <th>Subscription Date</th>
                <th>Expiry Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for row in page.membership_plans %}
            <tr>
                <td style="color:#333;font-weight:bold;"> {{row.title}} </td>
                <td style="color:#333;font-weight:bold;">{{row.date_updated}}</td>
                <td style="color:#333;font-weight:bold;">{{row.date_expiring}}</td>
                  <td>	<a href="{{base_url()}}/invoice/{{row.qcode}}" class="" style="padding: 8px 14px;font-size:18px;font-weight:bold;"><i class="fa fa-arrow-right"></i> View Invoice </a>
				
				</td>
            </tr>
           {% endfor %}
        </tbody>

    </table>
</div></div>
{% endif %}	

{% endblock content %}