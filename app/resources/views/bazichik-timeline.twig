{% extends 'admin_layout.twig' %}
{% block content %}
<div class="container">
	<div class="row">
			
			<!-- Listings -->
			<div class="col-lg-12 col-md-12">

				<div class="messages-container margin-top-0">
					<div class="messages-headline">
						<h4>Latest Activities ({{page.numAllNoti}})</h4>
					</div>
					
					<div class="messages-inbox">
 {% if page.data %}
						<ul>
            {% for activity in page.data %}
             {% include 'list_items/activity_list_item.twig' %}
{% endfor %} 
		
							
						</ul>
                        {% else %}
			 <section style="margin: 40px 0 80px 0;text-align: center;margin-bottom:30px;" class="center">
				<h1 style="text-align: center;font-weight: 500;"><i class="fa fa-calendar"></i></h1>
				<h4>There is no event in the timeline at this moment.</h4>

				<!-- Search -->
				<div class="row" style="margin-top:20px;">
					<div class="col-lg-8 col-lg-offset-2">
						<a href="{{base_url()}}/dashboard" class="button" style="margin-bottom:30px;"><i class="fa fa-arrow-right"></i> Back to Dashboard</a>
					</div>
				</div></section> {% endif %}
					</div>
				</div>

				<!-- Pagination -->
				<div class="clearfix"></div>
				 {% if page.numAllNoti > 10 %}
				<div class="pagination-container margin-top-30 margin-bottom-0">
					<nav class="pagination">
						<ul>
						    {% if page.numAllNoti >20 %}
						    
						    {% endif %}
							<li><a href="{{base_url()}}/notifications/1" {% if page.current_page == 1 %} class="current-page" {% endif %}>1</a></li>
							<li><a href="{{base_url()}}/notifications/2" {% if page.current_page == 2 %} class="current-page" {% endif %}>2</a></li>
							{% if page.numAllNoti > 20 %}
						    	<li><a href="{{base_url()}}/notifications/3" {% if page.current_page == 3 %} class="current-page" {% endif %}>3</a></li>
						    {% endif %}
						    {% if page.numAllNoti >30 %}
						    <li><a href="{{base_url()}}/notifications/4" {% if page.current_page == 4 %} class="current-page" {% endif %}>4</a></li>
						    {% endif %}
						    {% if page.numAllNoti >40 %}
						    	<li><a href="{{base_url()}}/notifications/5" {% if page.current_page ==5 %} class="current-page" {% endif %}><i class="sl sl-icon-arrow-right"></i></a></li>
						    {% endif %}
						    {% if page.numAllNoti >50 %}
						    	<li><a href="{{base_url()}}/notifications/6" {% if page.current_page >5 %} class="current-page" {% endif %}><i class="sl sl-icon-arrow-right"></i></a></li>
						    {% endif %}
						
						
						</ul>
					</nav>
				</div>
				<!-- Pagination / End -->
				 {% endif %}

			</div>
</div>
		</div>
{% endblock content %}