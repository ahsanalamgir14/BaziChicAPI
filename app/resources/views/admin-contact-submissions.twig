     $('#example').DataTable();
});
</script>
<style>
.table > tbody > tr > td{
font-size:14px;
}
</style>
{% endblock %}
{% block content %}
<div class="row clearfix margin-bottom-20">
<div class="col-lg-12 col-md-12">
{% if page.data|length > 0 %}

<div class="row clearfix">
    	<div class="col-lg-12 col-md-12">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
              <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
             {% for row in page.data %}
            <tr>
                
                <td>{{row.name}}</td>
                <td>{{row.email}}</td>
                <td>{{row.subject}}</td>
                <td>{{row.message}}</td>
                <td>{{row.date_created}}</td>
            </tr>
           {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
            </tr>
        </tfoot>
    </table>
</div></div>

            {% else %}
			 <section style="margin: 40px 0 80px 0;text-align: center;" class="center">
				<h2 style="text-align: center;
    font-size: 100px;
    line-height: 110px;
    font-weight: 500;"><i class="fa fa-envelope"></i></h2>
				<h4>NO CONTACT SUBMISSION</h4>
			</section>
            {% endif %}
			</div>		
{% endblock %}