{% extends 'admin_layout.twig' %}
{% block content %}
<div class="row">
{% if page.data %}
            {% for row in page.data %}
			<div class="col-lg-6 col-md-6">
					<div class="listing-item-container compact" data-marker-id="1">
						<div class="listing-item">
						
						{% if row.image %}					
	<img class="post-img" src="{{base_url()}}/{{row.image}}">
	{% else %}
	<img class="post-img" src="{{base_url()}}/images/empty.jpg" style="width:100%;">
    {% endif %}
							
							<div class="listing-item-content">
								<h3 class="">{{row.title}}</h3>
								<a href="{{base_url()}}/edit-service/{{row.id}}" class="button"><i class="sl sl-icon-note"></i> Edit</a>
									
									<a href="{{base_url()}}/service/{{row.id}}" class="button"><i class="sl sl-icon-share-alt"></i> View</a>
									
									<a data-id="{{row.id}}" class="button deleteService"><i class="sl sl-icon-trash"></i> Delete</a>
							</div>
						</div>
					</div>
				</div>
 {% endfor %} 
            {% else %}
			<div class="listing-item-image">
			<img src="{{base_url}}/images/services.png" alt="">
            <p>Looks like you have not added any service yet.</p>
			</div>
            {% endif %}
			</div>		
{% endblock content %}