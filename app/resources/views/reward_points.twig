{% extends 'admin_layout.twig' %}
{% block content %}
	{% if page.adminMode %}
	<div class="row">
<div class="col-md-6">
<div class="clearfix"></div>
<h2 style="color:#444444;font-weight:500;">Reward Points Manager</h2> 						
<div class="clearfix"></div>
</div>

<div class="col-md-6" style="text-align:right;">
<a style="font-weight:bold;" href="{{base_url()}}/assign-reward-points" class="button border with-icon">Add Reward Points <i class="sl sl-icon-plus"></i></a>
</div>
</div>
				
	<div class="row">
			<div class="col-lg-12">
						{% if page.data %}
						<div class="table table-responsive" style="margin-top:20px;">
						<table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%" style="padding:15px;">
							<thead>
								<tr>
									<th>S.No.</th>
									<th>Customer</th>
									<th>Rewards</th>
									<th>Description</th>
									<th>Date</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>S.No.</th>
									<th>Customer</th>
									<th>Rewards</th>
									<th>Description</th>
									<th>Date</th>
								</tr>
							</tfoot>
							<tbody>
							 {% for row in page.data %}
						<tr>
						<td>{{loop.index0 +1}}</td>
						<td>{{row.username}} </td>
						<td>{{row.points}} <i class="im im-icon-Coins-3"></i> </td>
						<td>{{row.note}} </td>
						<td>{{row.date_created}}</td>
								</tr>
			 {% endfor %}
					
							
							</tbody>
						</table>
					</div> 
            {% else %}
			<div style="padding: 20px 20px 20px 20px;text-align: center;background-color:#ffffff;box-shadow: 0 1px 3px 0px rgba(0, 0, 0, 0.06);">
				<h1><i class="fa fa-code"></i></h1>
				<h3>No Reward Points</h3>
				<h4>Looks like there is no reward point transaction to display. </h4>
				<a href="{{base_url()}}/assign-reward-points" class="button button-dark margin-top-20 margin-bottom-20"><i class="fa fa-arrow-right"></i>ASSIGN REWARD POINT</a>		
			</div>
            {% endif %}

					<div class="clear"></div>
					
					
			</div>
		</div>
 {% else %}
 <div class="row">
<div class="col-md-6">
<div class="clearfix"></div>
<h2 style="color:#444444;font-weight:500;">My Reward Points</h2> 						
<div class="clearfix"></div>
</div>

<div class="col-md-6" style="text-align:right;">
<a style="font-weight:bold;" href="{{base_url()}}/referral-codes" class="button border with-icon">REFER SOMEONE <i class="sl sl-icon-plus"></i></a>
</div>
</div>
<div class="row">
			<div class="col-lg-12">
						{% if page.data %}
						<div class="table table-responsive" style="margin-top:20px;">
						<table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%" style="padding:15px;">
							<thead>
								<tr>
									<th>S.No.</th>
									<th>Rewards</th>
									<th>Description</th>
									<th>Date</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>S.No.</th>
									<th>Rewards</th>
									<th>Description</th>
									<th>Date</th>
								</tr>
							</tfoot>
							<tbody>
							 {% for row in page.data %}
						<tr>
						<td>{{loop.index0 +1}}</td>
						<td>{{row.points}} <i class="im im-icon-Coins-3"></i> </td>
						<td>{{row.note}} </td>
						<td>{{row.date_created}}</td>
								</tr>
			 {% endfor %}
					
							
							</tbody>
						</table>
					</div> 
            {% else %}
			<div style="padding: 20px 20px 20px 20px;text-align: center;background-color:#ffffff;display:block;box-shadow: 0 1px 3px 0px rgba(0, 0, 0, 0.06);">
				<h1><i class="fa fa-code"></i></h1>
				<h3>Earn Reward Points</h3>
				<h4>Create a referral code that you can share with anyone. </h4>
				<a href="{{base_url()}}/referral-codes" class="button button-dark margin-top-20 margin-bottom-20"><i class="fa fa-arrow-right"></i>Generate Referral Code</a>		
			</div>
            {% endif %}

					<div class="clear"></div>
					
					
			</div>
		</div>
{% endif %}
		
{% endblock content %}