{% extends 'admin_layout.twig' %}
{% block content %}
<div class="row">
			<div class="col-lg-12 col-md-12">
			    <div class="dashboard-list-box margin-top-0">

					<!-- Sort by -->
					<div class="sort-by">
						<div class="sort-by-select">
							<select data-placeholder="Default order" name="selectSavedStatus" id="selectSavedStatus" class="chosen-select-no-single">
								<option value="1">All Saves</option>	
								<option value="2">Completed</option>
								<option value="3">Ongoing</option>
							</select>
						</div>
					</div>
					
					<!-- Reply to review popup -->
					<div id="small-dialog" class="zoom-anim-dialog mfp-hide"><div>
							{% include 'forms/dialog_document_review_form.twig' %}
					</div></div>
					
					<h4>SAVED READS</h4>
					
				<div class="messages-container margin-top-0">
				
{% if page.data %}
<ul>
            {% for document in page.data %}
		{% include 'list_items/saved_doc_list_item.twig' %}
						
 {% endfor %} 
 </ul>
 <!--- STATIC DATA -->
 
 <!-- END OF STATIC DATA -->
 </div>
 
            {% else %}
            <div style="text-align: center;padding: 40px 0;">
				<h1><i class="sl sl-icon-book-open"></i></h1>
				<h3 class="margin-top-10">Looks like you have not started reading yet.</h3>
				<p>Once you start reading you can always start from where you left.</p>
			</div>
            {% endif %}
</div></div></div>	</div>	
{% endblock content %}