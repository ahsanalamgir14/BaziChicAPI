{% extends 'admin_layout.twig' %}
{% block slider %} 
{% endblock %}
{% block content %}
<div class="row">
    <div class="col-lg-6 col-md-6">
        <section style="padding: 20px 20px 20px 20px;text-align: center;background-color:#ffffff;" class="center">
		<h1 style="text-align: center;font-weight: 500;font-size:50px;margin-top:0px;"><i class="im im-icon-Conference"></i></h1>
		<p style="padding-bottom: 3px;font-size:16px;line-height:16px;font-weight:500;">Generate referrals code that you can share with friends and family. Win reward points that you will redeem.</h4>
    <div class="text-center">
		<form role="form" method="POST" name="createReferralForm" id="createReferralForm" action="{{base_url()}}/referrals/create">
        <input type="hidden" value="{{session.userID}}" name="user_id" id="user_id">
		<button class="button button-3d button-rounded button-small button-green" type="submit"> <i class="fa fa-arrow-circle-right"></i> Generate New Referral Code</button>
        </form>
        </div></section>
    </div>
    <div class="col-lg-6 col-md-6">
        <!--- Stats Start -->
        <div class="row">
            <div class="col-lg-6 col-md-12">
			    <a href="{{base_url()}}/my-connections">
				<div class="dashboard-stat color-3">
					<div class="dashboard-stat-content"><h4>{{page.num_connections}} </h4> <span style="color:#ffffff;">My Connections</span></div>
					<div class="dashboard-stat-icon"><i class="im im-icon-Conference"></i></div>
				</div></a>
			</div>
			
	 <div class="col-lg-6 col-md-12">
			    <a href="{{base_url()}}/reward-points">
				<div class="dashboard-stat color-3">
					<div class="dashboard-stat-content"><h4>{{page.reward_points}} </h4> <span style="color:#ffffff;">Reward Points</span></div>
					<div class="dashboard-stat-icon"><i class="im im-icon-Coins-3"></i></div>
				</div></a>
			</div>
			
         </div>   
        <!-- Stats Ends -->
     	</div>	</div>
	

<div class="clear"></div>

					
<div class="row">
<div class="col-lg-12 center">
{% if page.data|length > 0 %}
						<div class="table-responsive" style="margin-top:20px;">
						<table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%" style="background-color:#ffffff;">
							<thead>
								<tr>
									<th>CODE</th>
									<th>Date Referred</th>
									<th>Total Redeems</th>
									<th>Share Code</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>CODE</th>
									<th>Date Referred</th>
									<th>Total Redeems</th>
									<th>Share Code</th>
								</tr>
							</tfoot>
							<tbody>
							 {% for coderow in page.data %}
							 {% include 'partials/widgets/referral-code-widget.twig' %}
			 {% endfor %}
							</tbody>
						</table>
					</div> 
            {% else %}
			<div style="text-align: center;padding: 0px 0;">
				<h1><i class="icon-code"></i></h1>
				<h3>New Referral Code</h3>
				<h4>Create a referral code that you will share with anyone. Earn reward points each time someone registers using your code.</h4>	
			</div>
            {% endif %}
    
</div></div> 					
{% endblock %}