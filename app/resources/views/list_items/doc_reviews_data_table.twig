<div class="row clearfix">
    	<div class="col-lg-12 col-md-12">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
              <th>Document</th>
                <th>Rating</th>
                <th>Review</th>
                	{% if page.adminMode %}
				  <th>Reviewer</th>
				  {% endif %}
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
             {% for row in page.data %}
            <tr>
                <td>
    {{row.doc_name}}</td>
                <td>{% if row.stars %}{{row.stars}}/ 5{% else %} - {% endif %}</td>
                <td>{{row.text}}</td>
                	{% if page.adminMode %}
				    <td>{{row.reviewer_name}}</td>
				  {% endif %}
                <td>{{row.date_created}}</td>
            </tr>
           {% endfor %}
        </tbody>
        <tfoot>
            <tr>
              <th>Document</th>
                <th>Rating</th>
                <th>Review</th>
                	{% if page.adminMode %}
				  <th>Reviewer</th>
				  {% endif %}
                <th>Date</th>
            </tr>
        </tfoot>
    </table>
</div></div>