<div class="row clearfix">
    	<div class="col-lg-12 col-md-12">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
            <th>#</th>
              <th>Name</th>
                <th>Country</th>
                <th>Membership</th>
                <th>Date Joined</th>
                <th>Last Active</th>
                <th>Loyalty Points</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
             {% for row in page.data %}
            <tr>
                <td>
                {{row.id}}</td>
    <td>{{row.first_name}} {{row.last_name}}</td>
                <td>{% if row.country %}{{row.country}}{% else %} - {% endif %}</td>
                <td>{{row.membership_info}}</td>
                <td>{{row.date_created}}</td>
                <td>{{row.last_seen}}</td>
                <td>{{row.loyalty_points}}</td>
                <td>
				<a href="{{base_url()}}/view-profile/{{row.user_name}}" target="_blank" title="View Profile" style="padding: 4px 14px;font-size:18px;font-weight:bold;"><i class="sl sl-icon-share-alt"></i> </a>
			<a href="{{base_url()}}/profile/{{row.user_name}}" title="Edit Account" style="padding: 4px 14px;font-size:18px;font-weight:bold;"><i class="sl sl-icon-note"></i> </a>
				<a href="javascript:void(0);" data-id="{{row.id}}" class="deleteUser" title="Delete Account" style="padding: 4px 14px;font-size:18px;font-weight:bold;"><i class="sl sl-icon-trash"></i> </a>
					
				</td>
            </tr>
           {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                 <th>#</th>
                <th>Name</th>
                <th>Country</th>
                <th>Membership</th>
                <th>Date Joined</th>
                <th>Last Active</th>
                <th>Loyalty Points</th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>
</div></div>