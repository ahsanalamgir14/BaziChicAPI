{% extends 'admin_layout.twig' %}
{% block content %}
<div class="row">
			<div class="col-lg-12">
				<div id="add-listing">
					<!-- Section -->
					<div class="add-listing-section">

						<!-- Headline -->
						<div class="add-listing-headline">
							<h3><i class="sl sl-icon-doc"></i> Edit Membership Plan</h3>
						</div>
						
						
     <form method="POST" id="updateMembershipForm" name="updateMembershipForm" action="{{base_url()}}/membership_plans/update" class="form-horizontal">
								
	<input type="hidden" value="{{membership.plan_id}}" name="plan_id" id="plan_id">
	<input type="hidden" value="{{membership.qcode}}" name="qcode" id="qcode">
						<!-- Title -->
						<div class="row with-forms">
							<div class="col-md-12">
								<h5>Plan Title <i class="tip" data-tip-content="Title for your plan"></i></h5>
								<input class="search-field" type="text" name="title" id="title" value="{{membership.title}}" placeholder="Plan title here" required/>
							</div>
						</div>
						
						<!-- Intro -->
						<div class="row with-forms">
							<div class="col-md-12">
								<h5>Short Tagline <i class="tip" data-tip-content="A short tagline"></i></h5>
								<input class="search-field" type="text" name="tagline" id="tagline" value="{{membership.tagline}}" type="text" value="" placeholder="Enter a tag (Optional)"/>
							</div>
						</div>

						<!-- Description -->
						<div class="form">
							<h5>Plan Features <i class="tip" data-tip-content="Write up the features of this plan in formatted list."></i></h5>
							<textarea class="WYSIWYG" name="membersip_desc" cols="40" rows="3" spellcheck="true" required>{{membership.membership_desc |raw}}</textarea>
							
						</div>
						
					<div class="row with-forms">

							<!-- Phone -->
							<div class="col-md-4">
								<h5>Price <span>(in $)</span></h5>
								<input type="number" name="price" value="{{membership.price}}" >
							</div>

							<!-- Website -->
							<div class="col-md-4">
								<h5>Duration <span>(in Days)</span></h5>
								<input type="number" name="duration" value="{{membership.duration}}" >
							</div>
							
							<div class="col-md-4">
								<h5>Sort Order </h5>
								<input type="number" name="sort_order" value="{{membership.sort_order}}">
							</div>

						</div>

			
			
					<input type="hidden" name="note" value="">		
					
						<div class="row with-forms">
									<div class="checkboxes margin-top-10">
										<input id="is_highlighted" type="checkbox" name="is_available" value="1" {% if membership.is_available > 0 %} checked {% endif %}>
										<label for="is_highlighted">Publish this plan and make it available to the public.</label>
									</div>
								</div>
								
						<div class="row with-forms">
									<div class="checkboxes margin-top-10">
										<input id="is_highlighted" type="checkbox" name="is_highlighted" value="1" {% if membership.is_published > 0 %} checked {% endif %}>
										<label for="is_highlighted">Highlight this plan and make it standout among others.</label>
									</div>
								</div>
								
					
						<button type="submit" class="button preview"> <i class="fa fa-arrow-circle-right"></i> Update Plan</button>
						
					</div>
					<!-- Section / End -->
                    </form>
				</div>
			</div>
		</div>
		
{% endblock content %}